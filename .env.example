# Production Environment Variables
# Supabase Production Database
VITE_SUPABASE_URL=https://supabase-url.supabase.co
VITE_SUPABASE_ANON_KEY=supabase-anon-key

# Environment identifier
VITE_APP_ENV=production

# Paper Trading API Keys (recommended for testing)
VITE_ALPACA_HISTORY_BASE_URL=https://<your-alpaca-history-base-url>/v2/stocks
VITE_ALPACA_PAPER_BASE_URL=https://<your-alpaca-paper-base-url>/v2
VITE_ALPACA_API_KEY=<your-alpaca-api-key>
VITE_ALPACA_SECRET_KEY=<your-alpaca-secret-key>

# X (Twitter) Developer API
# Create an app at https://developer.x.com/ to get these keys
X_API_KEY=<your-x-api-key>
X_API_SECRET=<your-x-api-secret>
X_BEARER_TOKEN=<your-x-bearer-token>
# Required for OAuth 1.0a / user context (e.g. posting, reading DMs)
X_ACCESS_TOKEN=<your-x-access-token>
X_ACCESS_TOKEN_SECRET=<your-x-access-token-secret>

# Ollama (LLM on Raspberry Pi)
# Use http://localhost:11434 if server runs on the same Pi
OLLAMA_BASE_URL=http://<raspberry-pi-ip>:11434
OLLAMA_MODEL=gemma2:2b

# Finnhub market news (free at https://finnhub.io)
FINNHUB_API_KEY=d3bo9lpr01qqg7bveqt0d3bo9lpr01qqg7bveqtg

# Alpha Vantage news/sentiment (free at https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=4Z944J0R7AQ219MI

# Promo website for tweets (learnstockmarket.online)
PROMO_WEBSITE_URL=https://learnstockmarket.online

# Dry-run: set to true to skip posting to X (test pipeline only)
DRY_RUN=false

# First date to post (YYYY-MM-DD). Job runs but skips posting before this date.
POST_START_DATE=2025-02-18

STRIPE_SECRET_KEY=<your-stripe-secret-key>

# Comma-separated user IDs to exclude from visit/page-view counts (e.g. your own)
# Default includes 23dacf76-a9a7-4bbb-ab99-205eb1a5e342
# EXCLUDED_VISIT_USER_IDS=23dacf76-a9a7-4bbb-ab99-205eb1a5e342